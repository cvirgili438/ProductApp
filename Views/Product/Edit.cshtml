@model Product
@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="text-center " asp-action="Edit">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">
            Create Product
        </h2>
        
        <div class="mb-3">            
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" ></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="PriceUSD" ></label>
            <input asp-for="PriceUSD" class="form-control"/>
            <span asp-validation-for="PriceUSD" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="ImageURL" ></label>
            <input asp-for="ImageURL" class="form-control"/>
            <span asp-validation-for="ImageURL" class="text-danger"></span>
            <div>
                <img src="@Model.ImageURL" />
            </div>
        </div>
        <button class="btn btn-warning" type="submit">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
    </div>

</form>



